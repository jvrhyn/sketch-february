---
interface Props {
  title: string;
  day: number;
  description?: string;
}

const { title, day, description } = Astro.props;
const prevDay = day > 1 ? day - 1 : null;
const nextDay = day < 28 ? day + 1 : null;
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline define:vars={{ base: import.meta.env.BASE_URL }}>
      window.__BASE__ = base;
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Day {day}: {title} | sketch february</title>
    <meta name="description" content={description || `Day ${day} of February Generative Art`} />
    <script src="https://cdn.jsdelivr.net/npm/p5@1.11.2/lib/p5.min.js"></script>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Helvetica, Arial, sans-serif;
        background: #0a0a0a;
        color: #fff;
        min-height: 100vh;
      }

      header {
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #222;
      }

      .title {
        font-size: 0.9rem;
        opacity: 0.7;
      }

      .title a {
        color: inherit;
        text-decoration: none;
      }

      .title a:hover {
        text-decoration: underline;
      }

      .day-label {
        font-size: 1.2rem;
        font-weight: 600;
      }

      nav {
        display: flex;
        gap: 1rem;
      }

      nav a {
        color: #fff;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border: 1px solid #333;
        border-radius: 4px;
        font-size: 0.85rem;
        transition: border-color 0.2s;
      }

      nav a:hover {
        border-color: #fff;
      }

      main {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
      }

      #sketch-container {
        border: 1px solid #222;
        border-radius: 8px;
        overflow: hidden;
      }

      .sketch-info {
        margin-top: 2rem;
        max-width: 600px;
        text-align: center;
      }

      .sketch-info h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }

      .sketch-info p {
        opacity: 0.7;
        line-height: 1.6;
      }
    </style>
  </head>
  <body>
    <header>
      <div>
        <div class="title"><a href={import.meta.env.BASE_URL}>sketch february</a></div>
        <div class="day-label">Day {day}</div>
      </div>
      <nav>
        {prevDay && <a href={`${import.meta.env.BASE_URL}/day/${prevDay}/`}>&larr; Day {prevDay}</a>}
        {nextDay && <a href={`${import.meta.env.BASE_URL}/day/${nextDay}/`}>Day {nextDay} &rarr;</a>}
      </nav>
    </header>
    <main>
      <div id="sketch-container"></div>
      <div class="sketch-info">
        <h1>{title}</h1>
        {description && <p>{description}</p>}
      </div>
    </main>
    <slot />
  </body>
</html>
